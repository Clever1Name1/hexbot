//It does something
{
	//Required
	"manifest_version": 2,
	"name": "HEx BOT (2015)",
	"version": "1.1.1",

	//Recommended
	"description": "A bot to hurry easy things ;)",

	//Required
	"browser_action": {
		//"default_icon": "images/favicon.png",
 		"default_popup": "popup.html"
 	},

 	//"icons": {
      //"256": "images/favicon.png"
  	//},

 	//Optional
 	"author":"G 2015",

 	//Recommended
	"permissions": [
		"tabs"
	],

	//Recommended
	"content_scripts":[
		{
			"matches": ["https://br.hackerexperience.com/*", "https://legacy.hackerexperience.com/*", "https://en.hackerexperience.com/*"],
			"js":
					[
						"global_constants/global.js",
						"request/sendRequest.js",
						"request/handleRequest.js",
						"riddles/riddleHandler.js",
						"missions/setNextStep.js",
						"request/resetRequestDada.js",
						"request/showRequest.js",
						"elements/getSomeElement.js",
						"missions/getSomeMission.js",
						"utilities/defineLanguage.js",
						"missions/getMissionInformation.js",
						"utilities/goToPage.js",
						"logs/extractDataFromLogs.js",
						"softwares/getSoftwareId.js",
						"softwares/executeInstallSoftware.js",
						"bank/executeCampingStep.js",
						"missions/executeMissionStep.js",	
						"utilities/startScriptCommunication.js",
						"script.js"
					]
		}
	],

	"background":{
		"scripts":["eventPageScript.js"],
		"persistent": true
	}

}
